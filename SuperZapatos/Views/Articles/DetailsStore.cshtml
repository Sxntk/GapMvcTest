@model IEnumerable<SuperZapatos.Models.ArticleModel>

@{
    ViewBag.Title = "All articles by store";
}

<h2>@Model.First().StoreName store articles</h2>

<div>
    <h4></h4>
    <hr />
    @foreach (var item in Model)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @item.Price.ToString("C")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TotalInShelf)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.TotalInShelf)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TotalInVault)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.TotalInVault)
            </dd>

        </dl>
    }

</div>
<p>
    @Html.ActionLink("Back to List", "Details", null, htmlAttributes: new { @class = "btn btn-default" })
</p>
