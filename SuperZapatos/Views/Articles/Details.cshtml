@model IEnumerable<SuperZapatos.Models.ArticleModel>

@{
    ViewBag.Title = "All articles details";
}

<h2>All articles details</h2>

<div>
    <hr />
    @Html.ActionLink("Create new article", "Create", "Articles", null, htmlAttributes: new { @class = "btn btn-success" }) |
    @Html.ActionLink("Back", "Index", "Home", null, htmlAttributes: new { @class = "btn btn-default" })

    @if (Model.Count() == 0)
    {
        @Html.Label("No items to show")
    }

    @foreach (var item in Model)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.StoreName)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.StoreName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                @item.Price.ToString("C")
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TotalInShelf)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.TotalInShelf)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.TotalInVault)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.TotalInVault)
            </dd>

        </dl>
        @Html.ActionLink("All " + item.StoreName + " articles", "DetailsStore", new { id = item.StoreId })
    }

</div>
<p>
    @Html.ActionLink("Create new article", "Create", "Articles", null, htmlAttributes: new { @class = "btn btn-success" }) |
    @Html.ActionLink("Back", "Index", "Home", null, htmlAttributes: new { @class = "btn btn-default" })
</p>
