@model IEnumerable<SuperZapatos.Models.StoreModel>

@{
    ViewBag.Title = "All Store details";
}

<h2>All store details</h2>

<div>
    <hr />
    @Html.ActionLink("Create new store", "Create", "Stores", null, htmlAttributes: new { @class = "btn btn-success" }) |
    @Html.ActionLink("Back", "Index", "Home", null, htmlAttributes: new { @class = "btn btn-default" })
    @if (Model.Count() == 0)
    {
        @Html.Label("No items to show")
    }

    @foreach (var item in Model)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Address)
            </dt>

            <dd>
                @Html.DisplayFor(model => item.Address)
            </dd>

        </dl>
    }

</div>
<p>
    @Html.ActionLink("Create new store", "Create", "Stores", null, htmlAttributes: new { @class = "btn btn-success" }) |
    @Html.ActionLink("Back", "Index", "Home", null, htmlAttributes: new { @class = "btn btn-default" })
</p>
